# Docker Environment Configuration

# Application
APP_NAME=CulturalTrip
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

APP_LOCALE=id
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=id_ID

# Database (Docker)
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=culturaltrip
DB_USERNAME=culturaltrip
DB_PASSWORD=secret
DB_ROOT_PASSWORD=root

# Cache & Session
CACHE_DRIVER=redis
SESSION_DRIVER=database
QUEUE_CONNECTION=database

# Redis (Docker)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=null

# Mail
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="noreply@culturaltrip.com"
MAIL_FROM_NAME="${APP_NAME}"

# Other settings
FILESYSTEM_DISK=public
BROADCAST_CONNECTION=log
LOG_CHANNEL=stack
LOG_LEVEL=debug

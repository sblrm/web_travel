APP_NAME="CulturalTrip"
APP_ENV=production
APP_KEY=base64:GENERATE_NEW_KEY_ON_LARAVEL_CLOUD
APP_DEBUG=false
APP_URL=https://your-domain.com

APP_LOCALE=id
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=id_ID

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=daily
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Laravel Cloud will provide these database credentials
DB_CONNECTION=mysql
DB_HOST=your-database-host.laravel.cloud
DB_PORT=3306
DB_DATABASE=your_database_name
DB_USERNAME=your_database_user
DB_PASSWORD=your_database_password

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=.your-domain.com

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=public
QUEUE_CONNECTION=database

# Use Redis for better performance on Laravel Cloud
CACHE_STORE=redis
CACHE_PREFIX=culturaltrip

MEMCACHED_HOST=127.0.0.1

# Laravel Cloud provides Redis
REDIS_CLIENT=phpredis
REDIS_HOST=your-redis-host.laravel.cloud
REDIS_PASSWORD=your_redis_password
REDIS_PORT=6379

# Configure mail service (use Laravel Cloud mail or external service)
MAIL_MAILER=smtp
MAIL_SCHEME=null
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=your_mail_username
MAIL_PASSWORD=your_mail_password
MAIL_FROM_ADDRESS="noreply@culturaltrip.com"
MAIL_FROM_NAME="${APP_NAME}"

# AWS S3 for file storage (optional - for better scalability)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=ap-southeast-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# Admin user email domain for Filament access
ADMIN_EMAIL_DOMAIN=culturaltrip.com
